---
import Layout from "@/layouts/Layout.astro";
import ClubStructure from "@/components/ClubStructureComponent.tsx";
import { getCollection } from "astro:content";

const structures = await getCollection("structures");
structures.reverse();
---

<Layout
  title="Rotaract Structure"
  description="Learn more about our club's structure and organization."
>
  <main class="flex-1">
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h1
              class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
            >
              Club Structure
            </h1>

            <p
              class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400"
            >
              Learn more about our club's structure and organization.
            </p>
          </div>
        </div>
        {
          structures.length > 0 ? (
            <ClubStructure structures={structures} client:load />
          ) : (
            <div class="flex items-center justify-center h-96">
              <p class="text-lg text-gray-500 dark:text-gray-400">
                No club structure information available right now.
              </p>
            </div>
          )
        }
      </div>
    </section>
  </main>
</Layout>
