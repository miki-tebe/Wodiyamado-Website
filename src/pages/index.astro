---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Welcome to Rotaract Club"
  description="We are a group of young leaders dedicated to improving our communities through service."
>
  <main class="flex-1">
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h1
              class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
            >
              Welcome to Rotaract Club
            </h1>
            <p
              class="mx-auto max-w-[700px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
            >
              We are a group of young leaders dedicated to improving our
              communities through service.
            </p>
          </div>
          <div class="space-x-4">
            <a href="#">
              <Button>Join Us</Button>
            </a>
            <a href="#">
              <Button variant="outline">Donate</Button>
            </a>
          </div>
        </div>
      </div>
    </section>
    <section
      class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800"
    >
      <div class="container px-4 md:px-6">
        <div
          class="grid items-center justify-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-12 xl:grid-cols-[1fr_550px]"
        >
          <img
            alt="Image"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-last"
            src="/placeholder.svg"
          />
          <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-gray-300 px-3 py-1 text-sm dark:bg-gray-800"
              >
                Notice Board
              </div>
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Important Announcements
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
              >
                Stay updated with the latest news and events.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a href="#">
                <Button>View Announcements</Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div
          class="grid items-center justify-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-52 xl:grid-cols-[1fr_550px]"
        >
          <img
            alt="Image"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-first"
            src="/placeholder.svg"
          />
          <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-gray-300 px-3 py-1 text-sm dark:bg-gray-800"
              >
                Gallery
              </div>
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Our Activities
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
              >
                Explore our past and present activities.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a href="/gallery">
                <Button>View Gallery</Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div
          class="grid items-center justify-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-12 xl:grid-cols-[1fr_550px]"
        >
          <img
            alt="Image"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-last"
            src="/placeholder.svg"
          />
          <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-gray-300 px-3 py-1 text-sm dark:bg-gray-800"
              >
                Events
              </div>
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Upcoming Activities
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
              >
                Stay updated with our upcoming events.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a href="/events">
                <Button>View Events</Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div
          class="grid items-center justify-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-52 xl:grid-cols-[1fr_550px]"
        >
          <img
            alt="Image"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-first"
            src="/placeholder.svg"
          />
          <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-gray-300 px-3 py-1 text-sm dark:bg-gray-800"
              >
                Rotaract Structure
              </div>
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Our Organization & Structure
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
              >
                Learn more about our club's structure and organization.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a href="/structure">
                <Button>View Structure</Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div
          class="grid items-center justify-center gap-6 lg:grid-cols-[1fr_500px] lg:gap-12 xl:grid-cols-[1fr_550px]"
        >
          <img
            alt="Image"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center sm:w-full lg:order-last"
            src="/placeholder.svg"
          />
          <div class="flex flex-col justify-center space-y-4">
            <div class="space-y-2">
              <div
                class="inline-block rounded-lg bg-gray-300 px-3 py-1 text-sm dark:bg-gray-800"
              >
                About Us
              </div>
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Our Mission & Values
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400"
              >
                Learn more about our mission and values.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a href="/about">
                <Button>Learn More</Button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
