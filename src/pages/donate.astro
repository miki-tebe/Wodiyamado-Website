---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const donations = await getCollection("donations");
---

<Layout
  title="Donate"
  description="Donate to help us continue our mission to help the community."
>
  <main class="flex-1">
    <section class="w-full py-12 md:py-24 lg:py-32">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h1
              class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
            >
              Donate
            </h1>

            <p
              class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400"
            >
              Donate to help us continue our mission to help the community.
            </p>
          </div>
        </div>
      </div>
    </section>
    <section class="w-full mb-20">
      <div
        class="container grid items-center justify-center gap-4 px-4 text-center md:px-6 lg:gap-10"
      >
        <div
          class="grid w-full grid-cols-1 lg:grid-cols-2 items-center justify-center gap-8 lg:gap-12"
        >
          {
            donations.map((donation) => (
              <div class="mx-auto flex w-full items-center justify-center">
                <div class="space-y-2">
                  <h3 class="text-lg font-semibold">{donation.data.name}</h3>
                  <p class="text-gray-500 dark:text-gray-400">
                    {donation.data.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
